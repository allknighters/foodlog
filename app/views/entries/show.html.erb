<% content_for :title do %>
  <%= @entry.meal_type %> &ndash; <%= DateTime.now.to_formatted_s(:nice_date) %> | <%= @entry.category.title %>
<% end %>

<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <div class="panel-block">
        <%= render @entry %>
      </div>
    </nav>

    <div class="columns is-mobile">
      <div class="column">
        <%= link_to "Edit", edit_entry_path(@entry), class: "button is-gray" %>
        <%= link_to "Destroy", entry_path(@entry), method: :delete, data: {confirm: "Are you sure?"}, class: "button is-gray" %>
      </div>
      <div class="column">
        <!-- -->
      </div>
    </div>
  </div>
</div>

